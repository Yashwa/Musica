<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/light_grey"
        android:padding="12dp"
        android:src="@drawable/ic_my_music" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Over th Horizon"
            android:textColor="@color/title_color"
            android:textSize="@dimen/itemTitle" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="Unknown"
            android:textColor="@color/sub_title_color"
            android:textSize="@dimen/itemInfo" />

        <TextView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/artist"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/artist"
            android:layout_toRightOf="@+id/artist"
            android:text=" . "
            android:textColor="@color/sub_title_color"
            android:textSize="@dimen/itemInfo" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/artist"
            android:layout_toEndOf="@+id/dot"
            android:layout_toRightOf="@+id/dot"
            android:text="00:00"
            android:textColor="@color/sub_title_color"
            android:textSize="@dimen/itemInfo" />

    </RelativeLayout>
</LinearLayout>
